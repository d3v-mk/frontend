<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Só permite HTTP no IPZADA (dev) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.0.9</domain>
    </domain-config>

    <!-- Garante HTTPS pro domínio oficial IPZADA -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.panopoker.com</domain>
    </domain-config>
</network-security-config>

